<?xml version="1.0"?>
<launch>

	<!-- No group - launch with ROS_NAMESPACE / launch-file -->
	<!-- map_server -->
	<arg name="map_file" default="$(find core)/maps/world.yaml"/>

	<!-- Static map_server -->
	<node name="map_server" pkg="map_server" type="map_server" args="$(arg map_file)">
		<param name="~frame_id" value="/map"/>
	</node>

</launch>
